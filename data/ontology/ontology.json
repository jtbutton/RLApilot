      "Report",
      "Other"
    ],
    "instrument_types": [
      "HPGe",
      "LSC",
      "ICP-MS",
      "ProportionalCounter",
      "GammaCamera",
      "FieldDetector",
      "PortableSpec",
      "Other"
    ]
  }
}
