        "Training & Workforce Development"
      ]
    },
    "competency_categories": [
      "Technical",
      "Operational",
      "Planning",
      "Administrative",
      "Safety",
      "Interpretation",
      "Validation"
    ],
    "scenario_types": [
      "CRC",
      "Fallout",
      "Ingestion",
      "MixedAgentILCE",
      "FieldScreening",
      "LabSurge",
      "SupplyChainDisruption",
      "CrossNetworkActivation",
      "Other"
    ],
    "resource_types": [
      "SOP",
      "Method",
      "Guide",
      "TrainingModule",
      "Tool",
      "Calculator",
      "Template",
